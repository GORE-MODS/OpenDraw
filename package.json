{
  "name": "opendraw",
  "version": "1.0.3",
  "description": "OpenDraw - transparent on-screen drawing overlay for streamers and creators",
  "main": "main.js",
  "author": "Gore-Tech",
  "license": "MIT",
"scripts": {
  "start": "electron . --enable-transparent-visuals --ozone-platform=x11 --no-sandbox --disable-gpu --in-process-gpu",
  "dist": "electron-builder --linux snap"
},
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "latest"
  },
  "build": {
    "appId": "com.goretech.opendraw",
    "productName": "OpenDraw",
    "icon": "Logo.png",
    "linux": {
      "target": "snap",
      "category": "Utility"
    },
    "snap": {
      "summary": "OpenDraw - transparent drawing overlay",
      "description": "Open-source tool to draw on screen over games, desktop, streams. Hotkeys, click-through, undo/redo.",
      "grade": "stable",
      "confinement": "strict",
      "base": "core22",
      "plugs": [
        "desktop",
        "desktop-legacy",
        "home",
        "x11",
        "wayland",
        "opengl",
        "audio-playback",
        "network",
        "pulseaudio"
      ]
    }
  }
}